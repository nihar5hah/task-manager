{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/tasks/bulk-update",
      "dest": "api/tasks/bulk-update.js"
    },
    {
      "src": "/api/tasks/search",
      "dest": "api/tasks/search.js"
    },
    {
      "src": "/api/tasks/([^/]+)",
      "dest": "api/tasks/[id].js"
    },
    {
      "src": "/api/tasks",
      "dest": "api/tasks.js"
    },
    {
      "src": "/api/config",
      "dest": "api/config.js"
    },
    {
      "src": "/api/stats",
      "dest": "api/stats.js"
    },
    {
      "src": "/api/sync",
      "dest": "api/sync.js"
    },
    {
      "src": "/api",
      "dest": "api/index.js"
    },
    {
      "src": "/css/(.*)",
      "dest": "public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "public/js/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    }
  ]
}